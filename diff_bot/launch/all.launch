<?xml version="1.0"?>

<launch>
  <arg 
    name="paused" 
    default="false"/>
  <arg 
    name="use_sim_time" 
    default="true"/>
  <arg 
    name="gui" 
    default="true"/>
  <arg 
    name="debug" 
    default="false"/>
  <arg 
    name="model" 
    default="$(find diff_bot)/urdf/diff_bot.urdf"/>
  <arg 
    name="x" 
    default="50"/>
  <arg 
    name="y" 
    default="50"/>
  <arg 
    name="z" 
    default="0"/>
  <arg 
    name="roll" 
    default="0"/>
  <arg 
    name="pitch" 
    default="0"/>
  <arg 
    name="yaw" 
    default="0"/>

  <param name="robot_description" command="$(find xacro)/xacro $(arg model)"/>

  <include 
    file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg 
      name="world_name" 
      value="$(find diff_bot)/worlds/hills.world"/> 
  </include>

  <node 
    pkg="gazebo_ros" 
    type="spawn_model" 
    name="urdf_spawner" 
    output="screen"
    args="-unpause -urdf -model robot -param robot_description -x $(arg x) -y $(arg y) -z $(arg z) -R $(arg roll) -P $(arg pitch) -Y $(arg yaw)"/>
  <!-- 
  <node 
    name="joint_state_publisher_gui" 
    pkg="joint_state_publisher_gui" 
    type="joint_state_publisher_gui"/> 
  -->
  <node 
    name="robot_state_publisher" 
    pkg="robot_state_publisher" 
    type="robot_state_publisher" />
  <node 
    name="rviz" 
    pkg="rviz" 
    type="rviz" />

</launch>